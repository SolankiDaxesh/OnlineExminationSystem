@model OnlineExaminationSystem.Models.Registration

@{
    ViewData["Title"] = "StudentLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4> Student Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="StudentLogin">
            <div validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="EnrollmentId" class="control-label"></label>
                <input for="EnrollmentId" class="form-control" />
                <span validation-for="EnrollmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password" class="control-label"></label>
                <input for="Password" class="form-control" />
                <span validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
